@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<p class="mt-4 text-center highlighted-text">This page provides a basic interface for managing orders, products, clients, and suppliers. Explore the features through the menu above to streamline your business operations efficiently.</p>


<div id="inventoryCarousel" class="carousel slide mt-5" data-bs-ride="carousel" style="max-width: 900px; margin: 0 auto;">
    <div class="carousel-inner" style="height: 600px;">
        <div class="carousel-item active">
            <img src="~/css/img/2022.10-AD-Waregem-12.jpg" class="d-block w-100 h-100" style="object-fit: cover;" alt="Inventory Management">
            <div class="carousel-caption d-none d-md-block text-dark bg-light bg-opacity-75 p-2">
                <h5>Inventory Management</h5>
                <p class="fw-bold">Track your stock levels with ease and efficiency.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/css/img/QUE-ES-FRAUDE.jpg" class="d-block w-100 h-100" style="object-fit: cover;" alt="Client Management">
            <div class="carousel-caption d-none d-md-block text-dark bg-light bg-opacity-75 p-2">
                <h5>Client Management</h5>
                <p class="fw-bold">Keep detailed records of your clients and their preferences.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/css/img/OIP.jpg" class="d-block w-100 h-100" style="object-fit: cover;" alt="Supplier Management">
            <div class="carousel-caption d-none d-md-block text-dark bg-light bg-opacity-75 p-2">
                <h5>Supplier Management</h5>
                <p class="fw-bold">Maintain a streamlined workflow with your suppliers.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#inventoryCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#inventoryCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Add Bootstrap CSS and JS if not already included in your layout -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
